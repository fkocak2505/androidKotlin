<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tagsArticleConstraint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/itemOfTagsArticleCoverPhoto"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
                android:id="@+id/itemOfTagsCoverPhotoProgress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/tabIndicatorColor4Proile"
                android:indeterminateTintMode="src_atop"
                app:layout_constraintBottom_toBottomOf="@+id/itemOfTagsArticleCoverPhoto"
                app:layout_constraintEnd_toEndOf="@+id/itemOfTagsArticleCoverPhoto"
                app:layout_constraintStart_toStartOf="@+id/itemOfTagsArticleCoverPhoto"
                app:layout_constraintTop_toTopOf="@+id/itemOfTagsArticleCoverPhoto" />

        <TextView
                android:id="@+id/itemOfTagsCoverPhotoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#191919"
                android:textSize="16dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
