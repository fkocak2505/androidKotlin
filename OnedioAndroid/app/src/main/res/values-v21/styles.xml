<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="CustomTabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/login_register_tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="ProfileTabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/profile_tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/ProfileTabLayoutTextAppearance</item>
    </style>

    <style name="ProfileTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>

    <style name="HashtagView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="tagTextSize">14dp</item>
    </style>




    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/popup_menu_radius_shape</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="jz_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jz_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jz_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="OImageView">
        <item name="android:src">@drawable/ic_onedio_splash_icon</item>
    </style>

    <style name="OScreenBackground">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="OImageViewToolbarOnedioLogo">
        <item name="android:src">@drawable/ic_onedio_toolbar_logo</item>
    </style>

    <style name="OTextViewSemiBoldFeedHugeCardTitle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="OTextViewRegularDate">
        <item name="android:textColor">@color/dateTextColor</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="OTextViewPopularCommentTitle">
        <item name="android:textColor">@color/dateTextColor</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="OTextViewPopularCommentText">
        <item name="android:textColor">@color/dateTextColor</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="OViewLine">
        <item name="android:background">@color/lineColor</item>
    </style>

    <style name="ElegantDialog_Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


</resources>
