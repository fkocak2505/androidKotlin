<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/OScreenBackground">

    <include
            android:id="@+id/toolBar4GeneralSetting"
            layout="@layout/toolbar_without_onedio_icon" />

    <ListView
            android:id="@+id/generalSettingListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp"
            app:layout_constraintTop_toBottomOf="@+id/toolBar4GeneralSetting" />

</androidx.constraintlayout.widget.ConstraintLayout>
