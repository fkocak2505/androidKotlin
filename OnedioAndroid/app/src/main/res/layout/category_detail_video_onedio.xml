<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/lastLine"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/jzVideoOnedio"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <cn.jzvd.JzvdStd
                android:id="@+id/jzVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_category_item_read_count"
            android:elevation="3dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jzVideoOnedio">

        <TextView
                android:id="@+id/videoOnedioReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="376b"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/videoOnedioReadCountInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İzlenme"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/videoOnedioReadCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/videoOnedioDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="09.10.2019"
            android:textSize="12dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout7"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
            android:id="@+id/videoOnedioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:fontFamily="@font/muli_semibold"
            android:text="Artık çerle çöple uğraştığın yeter! Dünyanın en harika arabaları burada. Ama kritik soru şu: Hangi araba senin kişiliğinle eşleşiyor?"
            android:textSize="14dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jzVideoOnedio" />

    <TextView
        android:id="@+id/videoOnedioTitleFullWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:fontFamily="@font/muli_semibold"
        android:text="Artık çerle çöple uğraştığın yeter! Dünyanın en harika arabaları burada. Ama kritik soru şu: Hangi araba senin kişiliğinle eşleşiyor?"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jzVideoOnedio" />


</androidx.constraintlayout.widget.ConstraintLayout>
