<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintEditorChoosing"
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/editorChoosingTextInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#231f20"
            android:text=""
            android:textSize="18dp"
            android:fontFamily="@font/muli_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <com.onedio.androidside.common.ScrollableGridView
            android:id="@+id/editorChoosingWidgetGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnWidth="90dp"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:clipChildren="true"
            android:verticalSpacing="20dp"
            android:alwaysDrawnWithCache="true"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editorChoosingTextInfo" />

    <TextView
            android:id="@+id/moreGridData4EditorChoosing"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/moreData"
            android:gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/muli_regular"
            android:textColor="#191919"
            app:layout_constraintTop_toBottomOf="@+id/editorChoosingWidgetGridView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#e2e2e2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/moreGridData4EditorChoosing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
