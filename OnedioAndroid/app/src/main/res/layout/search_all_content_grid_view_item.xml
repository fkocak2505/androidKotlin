<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moreContentConstraint"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/itemOfAllContentSearchImage"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/featured_news"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
            android:id="@+id/photoProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/tabIndicatorColor4Proile"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/itemOfAllContentSearchTitle"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="3"
            android:minLines="3"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="@color/userFollowerCountColor"
            android:text="Cildini Koruyacak Test Geldi! Güneş Koruyucular Hakkında Ne Kadar Bilgilisin?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemOfAllContentSearchImage" />

    <TextView
            android:id="@+id/itemOfContentSearchDate"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textSize="14dp"
            android:text="9 Ağustos 2019"
            android:textColor="@color/tabTextColor"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemOfAllContentSearchTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>