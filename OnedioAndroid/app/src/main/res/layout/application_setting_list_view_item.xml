<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:descendantFocusability="blocksDescendants">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent">


        <TextView android:id="@+id/applicationListTitle"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text=""
                  android:textColor="@color/userFollowerCountColor"
                  android:textSize="16dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="20dp"
                  app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/applicationListSubTitle"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="14dp"
                  android:visibility="gone"
                  android:textColor="@color/userFollowerCountColor"
                  android:layout_marginTop="8dp"
                  android:paddingBottom="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/applicationListTitle"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                  app:layout_constraintEnd_toStartOf="@+id/appSettingSwitch" android:layout_marginEnd="90dp"/>

        <Switch android:id="@+id/appSettingSwitch"
                android:focusable="false"
                android:visibility="invisible"
                android:layout_width="50dp" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>

        <!--<Spinner android:id="@+id/appSettingSpinner"
                 android:clickable="false"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:visibility="invisible"
                 android:layout_width="150dp" android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                 app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/> -->


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
