<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp">


    <View
            android:id="@+id/testBadgeLineCovertPhoto"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="#50000000"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="@+id/itemTestImage"
            app:layout_constraintTop_toTopOf="@+id/itemTestImage" />

    <ImageView
            android:id="@+id/testCoverPhotoBadgeImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:src="@drawable/delete_after"
            app:layout_constraintStart_toStartOf="@+id/itemTestImage"
            app:layout_constraintTop_toTopOf="@+id/itemTestImage"
            tools:ignore="ContentDescription" />




    <ImageView
            android:id="@+id/itemTestImage"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
            android:id="@+id/itemTestImageProgress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_marginTop="40dp"
            android:layout_marginStart="75dp"
            android:indeterminateTint="@color/tabIndicatorColor4Proile"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/itemTestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginEnd="20dp"
            android:textSize="14dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="#191919"
            android:fontFamily="@font/muli_regular"
            android:text="Buna Hazır Mıyız? Dünya, Erkekler Arasında Yayılan Başörtüsü Modasını Konuşuyor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
