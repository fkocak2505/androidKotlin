<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:layout_marginRight="40dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp">

            <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/empty_avatar"
                    android:foreground="@drawable/custom_image_view"
                    android:scaleType="centerCrop"
                    />

            <ProgressBar
                    android:id="@+id/photoProgressMessage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/tabIndicatorColor4Proile"
                    android:layout_gravity="center" />

        </RelativeLayout>

        <!-- <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/empty_avatar"
                    android:foreground="@drawable/custom_image_view"
                    android:scaleType="centerCrop"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"/> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                android:id="@+id/tv_chat_text"
                android:layout_toLeftOf="@id/tv_time"
                android:maxWidth="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
                android:textColor="#333333"
                android:textSize="14sp"
                android:background="@drawable/bg_chat_you"/> -->

            <TextView
                android:id="@+id/chatText"
                android:layout_toStartOf="@id/tv_time"
                android:maxWidth="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="left"
                android:background="@drawable/bg_chat_you"
                tools:ignore="ObsoleteLayoutParam" />

            <TextView
                android:id="@+id/chatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="5:04pm"
                android:textColor="@color/userFollowerCountColor"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>