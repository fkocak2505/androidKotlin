<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/lastLine"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/foodCoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_delete_after"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
            android:id="@+id/foodCoverPhotoProgress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/tabIndicatorColor4Proile"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />


    <ImageView
            android:id="@+id/videoType"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/ic_onedio_app_food_play"
            app:layout_constraintBottom_toBottomOf="@+id/foodCoverPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_category_item_read_count"
            android:elevation="3dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodCoverPhoto">

        <TextView
                android:id="@+id/foodVideoReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="376b"
                android:textSize="14dp"
                android:fontFamily="@font/muli_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/foodVideoReadCountInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okunma"
                android:fontFamily="@font/muli_regular"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodVideoReadCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/foodVideoDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="09.10.2019"
            android:textSize="12dp"
            android:gravity="center"
            android:fontFamily="@font/muli_regular"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout7"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
            android:id="@+id/foodVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/muli_semibold"
            android:maxLines="4"
            android:text="Artık çerle çöple uğraştığın yeter! Dünyanın en harika arabaları burada. Ama kritik soru şu: Hangi araba senin kişiliğinle eşleşiyor?"
            android:textSize="14dp"
        android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodCoverPhoto" />

    <TextView
        android:id="@+id/foodVideoTitleFullWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/muli_semibold"
        android:maxLines="4"
        android:visibility="invisible"
        android:text="Artık çerle çöple uğraştığın yeter! Dünyanın en harika arabaları burada. Ama kritik soru şu: Hangi araba senin kişiliğinle eşleşiyor?"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodCoverPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>
