<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">


    <TextView
        android:id="@+id/tv_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_lang"
        android:layout_alignLeft="@+id/im_lang"
        android:text="Kotlin"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/im_lang"
        app:layout_constraintStart_toStartOf="@+id/im_lang"
        app:layout_constraintTop_toBottomOf="@+id/im_lang" />


    <ImageView
        android:id="@+id/im_lang"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>